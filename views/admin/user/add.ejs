<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<title><%= title %></title>
		<link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css' />
		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-25259833-5']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>
		</head>
	<body>
		<div class="container-fluid">
			<div class="navbar">
				<div class="navbar-inner">
					<a class="brand" href="/">Syria</a>
					<ul class="nav">
						<li><a href="/">Home</a></li>
						<li><a href="/admin/deaths">Deaths</a></li>
						<li class="active"><a href="/admin/users">Users</a></li>
					</ul>

					<a href="/logout" class="pull-right btn btn-inverse">Logout <%= user %></a>
				</div>
			</div>
		</div>
		<div class="container-fluid">
			<div class="row">
				<div class="page-header">
					<h1>Add user</h1>
				</div>
				<form class="form-horizontal" action="/admin/user/add" method="POST">
					<div class="control-group">
						<label class="control-label" for="username">Username</label>
						<div class="controls">
							<input type="text" id="username" name="username" placeholder="Username">
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="inputEmail">Email</label>
						<div class="controls">
							<input type="email" id="inputEmail" name="email" placeholder="example@server.com">
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="inputPassword">Password</label>
						<div class="controls">
							<input type="password" id="inputPassword" name="password" placeholder="Password">
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<input type="submit" value="Add user" class="btn btn-primary">
						</div>
					</div>
					
				</form>
			</div>
		</div>
	</body>
</html>