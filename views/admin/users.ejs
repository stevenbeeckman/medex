<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<title><%= title %></title>
		<link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css' />
		</head>
	<body>
		<div class="container-fluid">
			<div class="navbar">
				<div class="navbar-inner">
					<a class="brand" href="/">Medex</a>
					<ul class="nav">
						<li><a href="/">Home</a></li>
						<li class="active"><a href="/admin/users">Users</a></li>
					</ul>

					<a href="/logout" class="pull-right btn btn-inverse">Logout <%= user %></a>
				</div>
			</div>
		</div>
		<div class="container-fluid">
			<div class="page-header">
				<a href="/admin/user/add" class="btn btn-primary pull-right">Add user</a>
				<h1>User management</h1> 
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>user name</th>
						<th>email</th>
						<th>edit</th>
						<th>delete</th>
					</tr>
				</thead>
				<tbody id="usertable">
					<% users.forEach(function(user){ %>
					<tr>
						<td><%= user.username %></td>
						<td><%= user.email %></td>
						<td><a href="/admin/user/<%= user.username %>/edit"><i class="icon-wrench"></i></a></td>
						<td><a href="/admin/user/<%= user.username %>/delete"><i class="icon-trash"></i></a></td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</body>
</html>